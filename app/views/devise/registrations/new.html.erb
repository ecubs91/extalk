<div class="containermember img-responsive">
   
</div>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="memberbox" style="padding: 15px 35px 15px 35px; margin: 20px 0px 20px 0px">
      <h2><%= t("Sign Up") %></h2>
      <div class="row">
        <div class="col-md-6">
          <div class="control-group">
            <h5><b><%= t('Last Name') %></b></h5>
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>          
        </div>
        <div class="col-md-6">
          <div class="control-group">
             <h5><b><%= t('First Name') %></b></h5>
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>          
        </div> 
        
        <div class="col-md-6">
          <div class="control-group">
             <h5><b><%= t('Email Address') %></b></h5>
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-6">
          <div class="control-group":>
             <h5><b><%= t('Password') %></b></h5>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>          
        </div>
        <div class="col-md-6">
          <div class="control-group">
             <h5><b><%= t('Password Confirmation') %></b></h5>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
      </div>        
<br>
  <div class="actions">
     <%= f.submit t("Sign Up"), class:"indexsearchbutton" %> 
  </div>
<% end %>

<%= render "devise/shared/links" %>
       </div>
      