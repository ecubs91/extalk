<div class="containermember">
   <br>
   <p id="notice"><%= notice %></p>
   <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
         <div class="memberbox">
         <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12">         
           <div class="avatar" style="background-image: url(<%= @member.image_url %>);background-size: 140px;width:140px;height:140px;margin-left:auto;margin-right:auto;"></div>
           <center>
             <h4><%= @member.user.first_name %></h4>
              <h4><%= @member.country %> | <%= @member.city %></h4>
              <p><%= "#{@reviews.length} reviews" %></p>
              <% if @member.user==current_user %>
              <p><%= link_to 'Edit', edit_member_path(@member), class: "btn btn-default" %></p>
             <% end %>
           </center>           
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">       
          <h4>
           <div class="row">
                <div class="col-md-3">
                   母语
                </div>
                <div class="col-md-9">
                   <%= @member.language.name %>
                </div>
           </div>
             <br>
           <div class="row">
                <div class="col-md-3">
                   希望学习
                </div>
                <div class="col-md-9">
                   <%= @member.wish_lang %>
                </div>
           </div>    
             <br>
           <div class="row">
                <div class="col-md-3">
                   兴趣爱好
                </div>
                <div class="col-md-9">
                   <%= @member.interest %>
                </div>
           </div>    
            <Br>
           <div class="row">
                <div class="col-md-3">
                   联系方式
                </div>
              <% if @member.weixin.present? %> 
                <div class="col-md-3">            
                   <img src="http://7xkbd8.com1.z0.glb.clouddn.com/pageswebwxgetmsgimg%20(1).jpg" style="float:left" class="img-circle">&nbsp;&nbsp;<%= @member.weixin %></p1>
                </div>
              <% end %>
              <% if @member.skype.present? %> 
                <div class="col-md-3">
                   <img src="http://7xkbd8.com1.z0.glb.clouddn.com/pageswebwxgetmsgimg.jpg" style="float:left" class="img-circle">&nbsp;&nbsp;<%= @member.skype %>
                </div>               
              <% end %>
           </div>    
           </h4>          
        </div>                            
      </div>
     </div>
     <div class="row" style="background: #f5f5f5; margin-right: 10px; margin-left:1px; border-radius:5px;border-top: 2px solid #E5E5E5">
        <p style="text-align:center;padding-top:5px">"<%= @member.description %>"</p>
     </div>
     <br>
     <div class="memberbox" style="padding: 15px 35px 15px 35px; margin: 20px 0px 20px 0px">
        <%= link_to t("Review"), new_member_review_path(@member), class: "btn btn-default" %>
    <% if @reviews.blank? %>
      <h4>No reviews yet. Be the first to write one!</h4>
    <% else %>
   <table class="table">
      <tbody>
         <% @reviews.each do |review| %>
         <tr>
            <td>
               <h4><%= review.user.first_name %></h4>
               <%= review.created_at.strftime("%-m/%-d/%y") %>
            </td>
            <td><p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p></td>
         </tr>
         <% end %>
      </tbody>
   </table>
    <% end %>
     </div>
         <br>
         <%= link_to 'Back', members_path, class: "indexsearchbutton", style:"margin-left:auto;color:white" %>
  </div>
</div>
   

