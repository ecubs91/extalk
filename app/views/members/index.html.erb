<div class="containermember">
  <br>  
<div class="row">
  <div class="col-md-3 col-sm-4">
     <div class="searchbox">
        <ul class="list-group">
           <h3><%= t('Language') %> <span class="glyphicon glyphicon-search" style="font-size:25px;color:#ea6779;margin-top:5px"></span></h3>
           <% Language.all.each do |language| %>
           <li class="list-group-item"><%= link_to language.name, members_path(language: language.name) %></li> 
          <% end %>               
        </ul>         
        <%= link_to t('Create Profile'), new_member_path, class:"btn btn-default" %>
     </div>            
  </div>
  <!------------- Right Panel for search results------------>
  <div class="col-md-9 col-sm-7">
    <% @members.each do |member| %>
      <div class="memberbox">
         <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12">         
           <div class="avatar" style="background-image: url(<%= member.image_url %>);background-size: 140px;width:140px;height:140px;margin-left:auto;margin-right:auto;"></div>
           <center>
             <h4><%= member.user.first_name %></h4>
              <h4><%= member.country %> | <%= member.city %></h4>
              <a href="<%= member %>"></a>
                <% if member.user==current_user %>
                 <p><%= link_to t('Edit'), edit_member_path(member), class: "btn btn-default" %>
                 <%= link_to t('Destroy'), member, style: "text-align:center", class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></p>
                <% end %>
           </center>           
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">       
          <h4>
           <div class="row">
                <div class="col-md-3">
                   <%= t('Mother Language') %>
                </div>
                <div class="col-md-9">
                   <%= member.language.name %>
                </div>
           </div>
             <br>
           <div class="row">
                <div class="col-md-3">
                   <%= t('Wish Language') %>
                </div>
                <div class="col-md-9">
                   <%= member.wish_lang %>
                </div>
           </div>    
             <br>
           <div class="row">
                <div class="col-md-3">
                   <%= t('Interests') %>
                </div>
                <div class="col-md-9">
                   <%= member.interest %>
                </div>
           </div>    
            <Br>
           <div class="row">
                <div class="col-md-3">
                   <%= t('Contact Details') %>
                </div>
              <% if member.weixin.present? %> 
                <div class="col-md-3">            
                   <img src="http://7xkbd8.com1.z0.glb.clouddn.com/pageswebwxgetmsgimg%20(1).jpg" style="float:left" class="img-circle">&nbsp;&nbsp;<%= member.weixin %></p1>
                </div>
              <% end %>
              <% if member.skype.present? %> 
                <div class="col-md-3">
                   <img src="http://7xkbd8.com1.z0.glb.clouddn.com/pageswebwxgetmsgimg.jpg" style="float:left" class="img-circle">&nbsp;&nbsp;<%= member.skype %>
                </div>               
              <% end %>
           </div>    
           </h4>          
        </div>                            
      </div>
     </div>
     <div class="row" style="background: #f5f5f5; margin-right: 10px; margin-left:1px; border-radius:5px;border-top: 2px solid #E5E5E5">
        <p style="text-align:center;padding-top:5px">"<%= member.description %>"</p>
     </div>
     <br>
    <% end %>
  </div>
</div>
       
<br>

<br>
</div>



